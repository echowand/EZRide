<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs307.ezride"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.cs307.ezride.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cs307.ezride.EZRideLoginSignupActivity"
            android:label="@string/title_activity_ezride_login_signup"
            android:parentActivityName="com.cs307.ezride.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs307.ezride.MainActivity" />
        </activity>
        <activity
            android:name="com.cs307.ezride.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="com.cs307.ezride.GroupsActivity"
            android:label="@string/title_activity_groups" >
        </activity>
        <activity
            android:name="com.cs307.ezride.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.cs307.ezride.EZRideSignUpActivity"
            android:label="@string/title_activity_ezride_sign_up"
            android:parentActivityName="com.cs307.ezride.EZRideLoginSignupActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs307.ezride.EZRideLoginSignupActivity" />
        </activity>
        <activity
            android:name="com.cs307.ezride.EZRideLoginActivity"
            android:label="@string/title_activity_ezride_login"
            android:parentActivityName="com.cs307.ezride.EZRideLoginSignupActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs307.ezride.EZRideLoginSignupActivity" />
        </activity>
    </application>

</manifest>
